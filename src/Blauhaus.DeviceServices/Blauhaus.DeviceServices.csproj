<Project Sdk="MsBuild.SDK.Extras/2.0.54">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;Xamarin.iOS10;MonoAndroid9;uap10.0.17134</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild> 
    <PackageId>Blauhaus.DeviceServices</PackageId>
    <PackageProjectUrl>https://github.com/BlauhausTechnology/Blauhaus.DeviceServices</PackageProjectUrl>
    <RepositoryUrl>https://github.com/BlauhausTechnology/Blauhaus.DeviceServices</RepositoryUrl>
    <PackageTags>xamarin, windows, ios, android, xamarin.forms</PackageTags>
    <Title>Device Services</Title>
    <Description>Miscellaneous Xamarin device services</Description>
    <Copyright>Copyright 2020</Copyright>

  </PropertyGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
    <Compile Include="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="iOS\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="Android\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="Android\**\*.cs" />
    <Compile Remove="UWP\**\*.cs" />
    <Compile Remove="iOS\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blauhaus.Ioc.Abstractions" Version="1.2.3" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
    <PackageReference Include="System.Reactive" Version="4.4.1" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Blauhaus.DeviceServices.Abstractions\Blauhaus.DeviceServices.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Common\DeviceInfo\BaseDeviceInfoService.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Common\Application\ApplicationInfoService.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Common\SecureStorage\SecureStorageService.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Common\Permissions\DevicePermissionsService.cs" />

    <Compile Include="Common\Thread\ThreadService.cs" />
    <Compile Include="Common\Application\ApplicationInfoService.cs" />
    <Compile Include="Common\DeviceInfo\BaseDeviceInfoService.cs" />
    <Compile Include="Common\SecureStorage\SecureStorageService.cs" />
    <Compile Include="Common\Connectivity\ConnectivityService.cs" />
    <Compile Include="Common\_Ioc\ServiceCollectionExtensions.cs" />
    <Compile Include="Common\_Ioc\IocServiceExtensions.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Common\_Ioc\ServiceCollectionExtensions.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <PackageReference Include="dannycabrera.GetDroidModel">
      <Version>1.5.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <PackageReference Include="dannycabrera.GetiOSModel">
      <Version>1.15.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
